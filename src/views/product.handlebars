<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
</head>
<body>
      <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Mi Tienda</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carrito">
                        <i class="fas fa-shopping-cart"></i> 
                        Carrito 
                        <span id="cart-count" class="badge badge-pill badge-danger">0</span>
                    </a>
                </li>
                {{#if username}}
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Cerrar sesión ({{username}})</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </nav>

    <header>
        <h1>Detalles del producto</h1>
    </header>

    <a href="/listCarts" style="background-color: #0e71db; padding:5px;">Ver Carritos</a>

    <!-- Contenedor de productos -->
    <div class="container mt-4">
        <h1 class="mb-4">Productos</h1>
        <div id="contenedorProductos" class="row">
            {{#each products}}
                <div class="col-12 col
                -md-6 col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title
                            ">{{title}}</h5>
                            <p class="card-text">{{description}}</p>
                            <p class="card-text"><strong>Precio: </strong>{{price}}</p>
                            <p class="card-text"><strong>Stock: </strong>{{stock}}</p>
                            <button class="btn btn-primary" onclick="openModal('{{_id}}')">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>



    <!-- Paginación -->
    <div class="botonera">
        {{#if hasPrevPage}}
            <button>
                <a href="/products?page={{prevPage}}"> Anterior </a>
            </button>
        {{/if}}
        {{#if hasNextPage}}
            <button>
                <a href="/products?page={{nextPage}}"> Siguiente </a>
            </button>
        {{/if}}
        <div>
            <p><strong>Página </strong> {{currentPage}} <strong>de </strong> {{totalPages}} </p>
        </div>
    </div>

    <!-- Modal para agregar productos al carrito -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">×</span>
            <div class="modal-header">Agregar productos al carrito</div>
            <div class="modal-body">
                <input type="hidden" id="productId" />
                <label for="cantidad">Cantidad:</label>
                <input type="number" class="form-control" placeholder="Ingrese la cantidad" id="cantidad" name="cantidad" min="1" />
            </div>
            <div class="modal-footer">
                <button type="submit" onclick="addToCart()">Agregar</button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        function openModal(productId) {
            document.getElementById('productId').value = productId;
            document.getElementById("myModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

        async function addToCart() {
            const productId = document.getElementById('productId').value;
            const carritoId = document.getElementById('carritoId').value;
            const cantidad = document.getElementById('cantidad').value;

            try {
                const response = await fetch(`/api/carts/${carritoId}/product/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ quantity: cantidad })
                });
                const result = await response.json();

                if (response.ok) {
                    alert('Producto agregado al carrito exitosamente');
                    closeModal();
                } else {
                    alert(result.error || 'Error al agregar el producto al carrito');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al agregar el producto al carrito');
            }
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById("myModal")) {
                closeModal();
            }
        }
    </script>
</body>
</html>
    
  
