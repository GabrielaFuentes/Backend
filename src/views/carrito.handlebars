<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
      <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Mi Tienda</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carrito">
                        <i class="fas fa-shopping-cart"></i> 
                        Carrito 
                        <span id="cart-count" class="badge badge-pill badge-danger">0</span>
                    </a>
                </li>
                {{#if username}}
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Cerrar sesión ({{username}})</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>Carrito de Compras</h1>
        {{#if carrito.length}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each carrito}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.quantity}}</td>
                        <td>${{this.price}}</td>
                        <td>${{multiply this.quantity this.price}}</td>
                        <td>
                            <button class="btn btn-danger eliminar-producto" data-id="{{this._id}}">Eliminar</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="text-right">
                <h3>Total: ${{calculateTotal carrito}}</h3>
                <button class="btn btn-success">Proceder al Pago</button>
            </div>
        {{else}}
            <p>Tu carrito está vacío</p>
        {{/if}}
    </div>

    <!-- Enlace a Bootstrap JS y dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Aquí puedes agregar la lógica para eliminar productos del carrito
        document.querySelectorAll('.eliminar-producto').forEach(button => {
            button.addEventListener('click', () => {
                const id = button.getAttribute('data-id');
                // Aquí va la lógica para eliminar el producto del carrito
                console.log(`Eliminar producto con id: ${id}`);
            });
        });
    </script>
</body>
</html>
